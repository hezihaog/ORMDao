<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <Button
            android:id="@+id/insert_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入String" />

        <Button
            android:id="@+id/insert_int"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入int" />

        <Button
            android:id="@+id/insert_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入long" />

        <Button
            android:id="@+id/insert_float"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入float" />

        <Button
            android:id="@+id/insert_boolean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="插入boolean" />

        <Button
            android:id="@+id/delete_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="删除所有" />

        <Button
            android:id="@+id/get_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取string" />

        <Button
            android:id="@+id/get_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取所有" />

        <Button
            android:id="@+id/is_contains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是否包含某个值" />
    </LinearLayout>
</ScrollView>